<figure>
  <figcaption>A graph that shows the number of WCAG issues.</figcaption>
<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="chart" width="420" height="150" aria-labelledby="title" role="img">
  <title id="title">A bart chart showing WCAG errors</title>
  <g class="bar">
    <rect width="{{criticalCountPercent}}%" height="19"></rect>
    <text x="45" y="9.5" dy=".35em">{{seriousCount}} critical errors</text>
  </g>
  <g class="bar">
    <rect width="{{seriousCountPercent}}%" height="19" y="20"></rect>
    <text x="85" y="28" dy=".35em">{{seriousCount}} serious errors</text>
  </g>
  <g class="bar">
    <rect width="{{moderateCountPercent}}%" height="19" y="40"></rect>
    <text x="150" y="48" dy=".35em">{{moderateCount}} moderate errors</text>
  </g>
  <g class="bar">
    <rect width="{{minorCountPercent}}%" height="19" y="60"></rect>
    <text x="161" y="68" dy=".35em">{{minorCount}} minor errors</text>
  </g>
</svg>
</figure>
